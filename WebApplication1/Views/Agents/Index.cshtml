@model IEnumerable<WebApplication1.Models.Agent>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Admin</title>
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    <script src="~/js/main.js"></script>
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index")" class="logo d-flex align-items-center">
                ADMIN
            </a>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li>
                    <a href="@Url.Action("Logout")">
                        Logout
                    </a>
                </li>

            </ul>
        </nav>


    </header>
    <!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Index")">
                    Dashboard
                </a>
            </li>

            <li class="nav-heading">Main</li>
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Advertisement</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">

                    <li>
                        <a href="@Url.Action("Index","Advertisements")">
                            <i class="bi bi-circle"></i><span>Index</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Create","Advertisement")">
                            <i class="bi bi-circle"></i><span>Create</span>
                        </a>
                    </li>

                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-journal-text"></i><span>Agent</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("Index","Agents")">
                            <i class="bi bi-circle"></i><span>Index</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Create","Advertisement")">
                            <i class="bi bi-circle"></i><span>Create</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Tables</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="tables-general.html">
                            <i class="bi bi-circle"></i><span>General Tables</span>
                        </a>
                    </li>
                    <li>
                        <a href="tables-data.html">
                            <i class="bi bi-circle"></i><span>Data Tables</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#icons-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-gem"></i><span>Seller</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="icons-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("Index","Sellers")">
                            <i class="bi bi-circle"></i><span>Index</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Create","Sellers")">
                            <i class="bi bi-circle"></i><span>Create</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-heading">Others</li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index","Catergories")">
                    <i class="bi bi-person"></i>
                    <span>Category</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index","Images")">
                    <i class="bi bi-question-circle"></i>
                    <span>Image</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index","Payments")">
                    <i class="bi bi-card-list"></i>
                    <span>Payment</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="@Url.Action("Index","Reports")">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Report</span>
                </a>
            </li>
        </ul>

    </aside>
    <!-- End Sidebar-->
    <!-- ======= Main ======= -->
    <main id="main" class="main">

        <section class="section dashboard">
            <div class="row">

                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-12">
                            <!-- css 807 217 -->
                            <div class="card recent-sales">
                                <p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AgentName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.isActivate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Password)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Introduction)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmailHide)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.User.UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Payment.PaymentName)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AgentName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.isActivate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Password)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Introduction)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmailHide)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Payment.PaymentName)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.AgentId }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.AgentId }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.AgentId })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>

                        <div class="col-12">
                            <!-- css 824 217 -->
                            <div class="card top-selling">
                                <h4>
                                    Inactive Agent
                                </h4>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AgentName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.isActivate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Password)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Introduction)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EmailHide)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.User.UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Payment.PaymentName)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        if (item.isActivate == false)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AgentName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Phone)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.isActivate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Password)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Introduction)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmailHide)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.UserName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Payment.PaymentName)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.AgentId }) |
                                                    @Html.ActionLink("Details", "Details", new { id = item.AgentId }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.AgentId })
                                                </td>
                                            </tr>
                                        }
                                    }

                                </table>
                            </div>
                        </div>

                    </div>
                </div>


            </div>
        </section>

    </main>
    <!-- End #main -->
</body>

</html>